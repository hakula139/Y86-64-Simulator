{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build with msvc",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/Zi",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "Build with clang++",
            "command": "clang++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-Wall",
                "-std=c++17",
                "-fcolor-diagnostics",
                "--debug"
            ],
            "options": {
                "cwd": "C:/LLVM/bin"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build with clang",
            "command": "clang",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-Wall",
                "-std=c11",
                "-fcolor-diagnostics",
                "--debug"
            ],
            "options": {
                "cwd": "C:/LLVM/bin"
            },
            "group": "build"
        }
    ]
}